[Unit]
Description=Bandwidth shaper/Network rate limiter
After=network-online.target
Wants=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
#systemctl restart wondershaper
#File=/etc/systemd/system/wondershaper.service
ExecStart=/opt/wondershaper -a eth0 -d 153600 -u 153600
ExecStop=/opt/wondershaper -c -a eth0

[Install]
WantedBy=multi-user.target
